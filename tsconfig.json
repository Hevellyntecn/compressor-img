{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./client/*"]
    }
  },
  "include": [
    "client/next-env.d.ts",
    "client/**/*.ts",
    "client/**/*.tsx",
    "client/.next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "server"]
}
